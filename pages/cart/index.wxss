page {
  padding-bottom: 90rpx;
}
.revice_address_row .address_btn {
  padding: 20px;
}
.revice_address_row .address_btn button {
  width: 60%;
}
.revice_address_row .address_info {
  display: flex;
  padding: 20rpx;
}
.revice_address_row .address_info .user_info {
  flex: 2.5;
}
.revice_address_row .address_info .user_phone {
  flex: 1;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-bottom: 1rpx solid currentColor;
}
.cart_content .cart_main .cart-kong {
  margin: 0 auto;
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1px solid #ccc;
}
.cart_content .cart_main .cart_item .cart_chk {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item navigator.cart_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item navigator.cart_img image {
  width: 80%;
  height: 30vw;
}
.cart_content .cart_main .cart_item .cart_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  color: #666;
  padding: 20rpx 0;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_info {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_info .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_info .num_tool {
  display: flex;
  flex-direction: row;
  text-align: center;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_info .num_tool .num_edit {
  display: flex;
  justify-content: center;
  text-align: center;
  border: 1rpx solid #aaa;
  width: 55rpx;
  height: 55rpx;
  margin: 0 10rpx;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_info .num_tool .goods_num {
  display: flex;
  justify-content: center;
  text-align: center;
  width: 55rpx;
  height: 55rpx;
  margin: 0 10rpx;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.footer_tool .all_chk {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool .total_price_info {
  flex: 4;
  text-align: right;
  margin-right: 6rpx;
}
.footer_tool .total_price_info .total_price text {
  color: var(--themeColor);
  font-size: 32rpx;
}
.footer_tool .order_pay {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
}
