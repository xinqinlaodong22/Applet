page {
  background-color: #ecebe8;
}
.user_info_wrap {
  height: 45vh;
  background-color: var(--themeColor);
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .img-bg {
  width: 100%;
  height: 50vh !important;
  filter: blur(4rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .img-icon {
  width: 190rpx;
  height: 65rpx;
  border-radius: 50%;
  margin-bottom: 50rpx;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  font-size: 40rpx;
}
.user_info_wrap navigator {
  color: #fff;
  text-align: center;
  line-height: 45vh;
  font-size: 50rpx;
  font-weight: 700;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #666;
  padding-bottom: 100rpx;
}
.user_content .user_main .history_wrap {
  display: flex;
  background-color: #fff;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .my_order {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.user_content .user_main .my_order .order-title {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 25rpx;
  border-bottom: 2px solid #ecebe8;
}
.user_content .user_main .my_order .order-content {
  padding: 20rpx 0;
  display: flex;
}
.user_content .user_main .my_order .order-content navigator {
  flex: 2;
  text-align: center;
}
.user_content .user_main .my_order .order-content navigator .iconfont {
  font-size: 50rpx;
  color: var(--themeColor);
  margin-bottom: 10rpx;
}
.user_content .user_main .receive_address_management {
  margin-top: 20rpx;
  padding: 25rpx;
  padding-left: 15rpx;
  background-color: #fff;
}
.user_content .user_main .relation {
  margin-top: 20rpx;
  padding: 0 15rpx;
  background-color: #fff;
}
.user_content .user_main .relation .rel-CustomerService {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2px solid #ecebe8;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}
.user_content .user_main .relation .opinion {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 2px solid #ecebe8;
}
.user_content .user_main .relation .about {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}
.user_content .user_main .recommend {
  margin-top: 20rpx;
  padding: 25rpx;
  padding-left: 15rpx;
  background-color: #fff;
}
